<!DOCTYPE html>
<html>
 <head>
   <meta charset="utf-8">
 </head>
 <body>
  <script>
var user,
    number,
    i = 0;
function games(){
  number = Math.floor(Math.random() * 1000);
  do{
    user = +prompt(`Ваше число.. (${i} из 10 попыток)`);

  if(user > number ){
    i++;
    user = alert(`Меньше!`);
    if (i === 10){return alert(`Вы проиграли! Загадогное число ${number}`);}

  }else if(user < number){
    i++;
    user = alert(`Больше!` );
    if (i === 10){return alert(`Вы проиграли! Загадогное число ${number}`);}

  } 
    else if(user === number){
    return alert(`Правильно!`);

  } 


  }while(i < 10);

}

  games();

  </script>
 </body>
</html>


